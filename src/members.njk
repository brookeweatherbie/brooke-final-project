{% extends '_templates/base.njk' %}

{% block page_title %}Members{% endblock %}
{% block page_description %}Biography pages for each of the band members of Queen.{% endblock %}

{% block content %}

<section class="container">
  <div class="row">
    <div class="col-md-6">
        <h2> <a href="members/{{ name }}.html">{{ name }}</a></h2>
          <p class="instruments">{{ instruments }}</p>
          <p class="tenure">{{ tenure }}</p>
    </div>
    <div class="col-md-6">
      <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="..img/{{ image }}" class="d-block w-100 img-fluid" alt="Color image of the Queen band member">
          </div>
          <div class="carousel-item">
            <img src="..img/{{ imagebw }}" class="d-block w-100 img-fluid" alt="Black and white image of the Queen band member">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>
</section>

{% endblock %}
